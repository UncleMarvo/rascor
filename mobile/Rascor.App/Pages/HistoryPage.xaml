<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Rascor.App.Converters"
             x:Class="Rascor.App.Pages.HistoryPage"
             Title="History">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:EventIconConverter x:Key="EventIconConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="0">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Padding="20,20,20,10" Spacing="5">
            <Label Text="📜 History" 
                   FontSize="20" 
                   FontAttributes="Bold" />
            <Label Text="View your past activity" 
                   FontSize="14" 
                   TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Tab Selector -->
        <Grid Grid.Row="1" 
              Padding="20,0" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="10"
              Margin="0,0,0,10">
            <Button Grid.Column="0"
                    x:Name="AttendanceTabButton"
                    Text="Site Attendance"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Clicked="OnAttendanceTabClicked" />
            <Button Grid.Column="1"
                    x:Name="RamsTabButton"
                    Text="RAMS Signed"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Clicked="OnRamsTabClicked" />
        </Grid>

        <!-- Content Area -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="20,0,20,20" Spacing="15">

                <!-- Attendance History Container -->
                <VerticalStackLayout x:Name="AttendanceHistoryContainer" 
                                     IsVisible="True"
                                     Spacing="10">
                    <Label Text="📍 Site Attendance History" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           Margin="0,0,0,10" />

                    <CollectionView x:Name="CheckInsCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="White"
                    Padding="12"
                    Margin="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <!-- Icon -->
                                        <Label Grid.Column="0"
                           Text="{Binding EventType, Converter={StaticResource EventIconConverter}}"
                           FontSize="24"
                           VerticalOptions="Center"
                           Margin="0,0,10,0"/>

                                        <!-- Info -->
                                        <VerticalStackLayout Grid.Column="1">
                                            <Label Text="{Binding SiteName}" 
                               FontAttributes="Bold"
                               TextColor="Black"/>
                                            <Label Text="{Binding Timestamp, StringFormat='{0:h:mm tt}'}" 
                               FontSize="12" 
                               TextColor="Gray"/>
                                            <Label Text="{Binding TriggerMethod}" 
                               FontSize="12" 
                               TextColor="Gray"/>
                                        </VerticalStackLayout>

                                        <!-- Enter/Exit Label -->
                                        <Label Grid.Column="2"
                           Text="{Binding EventType}"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="End">
                                            <Label.Triggers>
                                                <DataTrigger TargetType="Label" 
                                        Binding="{Binding EventType}" 
                                        Value="Enter">
                                                    <Setter Property="Text" Value="Checked In" />
                                                    <Setter Property="TextColor" Value="Green" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Label" 
                                        Binding="{Binding EventType}" 
                                        Value="Exit">
                                                    <Setter Property="Text" Value="Checked Out" />
                                                    <Setter Property="TextColor" Value="Red" />
                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- RAMS History Container -->
                <VerticalStackLayout x:Name="RamsHistoryContainer" 
                                     IsVisible="False"
                                     Spacing="10">
                    <Label Text="📷 RAMS Photos Today" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,10"/>

                    <CollectionView x:Name="RamsPhotosCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="White" 
                                        Padding="10" 
                                        Margin="5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="80,*,Auto">
                                        <!-- Thumbnail -->
                                        <Image Grid.Column="0"
                                               Source="{Binding LocalFilePath}"
                                               Aspect="AspectFill"
                                               HeightRequest="60"
                                               WidthRequest="60"/>

                                        <!-- Info -->
                                        <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                            <Label Text="{Binding SiteName}" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding CapturedAt, StringFormat='{0:h:mm tt}'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding FileSizeBytes, StringFormat='{0:N0} KB'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>

                                        <!-- Status -->
                                        <Label Grid.Column="2"
                                               Text="✓ Saved"
                                               TextColor="Green"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>